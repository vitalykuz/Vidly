@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<p>
     @Html.ActionLink("Add Movie", "New", "Movies", null, new {@class = "btn btn-primary"})
</p>

@if (!Model.Any())
{
    <p>We don't have any movies yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Edit</th>
            </tr>
        </thead>

        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Details", "Movies", new {id = movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null)</td>
            </tr>
        }

    </table>
}
